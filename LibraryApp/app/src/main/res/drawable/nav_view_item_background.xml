        <layer-list>
            <item android:left="10dp" android:right="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                    <solid android:color="@color/weak_orange" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
